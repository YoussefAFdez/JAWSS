{% extends 'layout.html.twig' %}

{% block title %}Imágenes - {{ parent() }}{% endblock %}

{% block contenido %}
    <h1 class="text-xl font-bold mb-6 mt-3">Listado de Imágenes</h1>

    <table class="table">
        <thead>
            <tr>
                <th>Id</th>
                <th>Resolucion</th>
                <th>actions</th>
            </tr>
        </thead>
        <tbody>
        {% for imagen in imagens %}
            <tr>
                <td>{{ imagen.id }}</td>
                <td>{{ imagen.resolucion }}</td>
                <td>
                    <a href="{{ path('app_imagen_show', {'id': imagen.id}) }}">show</a>
                    <a href="{{ path('app_imagen_edit', {'id': imagen.id}) }}">edit</a>
                </td>
            </tr>
        {% else %}
            <tr>
                <td colspan="3">no records found</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

    <a href="{{ path('app_imagen_new') }}">Create new</a>
{% endblock %}

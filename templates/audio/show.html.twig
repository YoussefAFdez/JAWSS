{% extends 'layout.html.twig' %}

{% block title %}Audio{% endblock %}

{% block contenido %}
    <h1>Audio</h1>

    <table class="table">
        <tbody>
            <tr>
                <th>Nombre</th>
                <td>{{ audio.recurso }}</td>
            </tr>
            <tr>
                <th>Duracion</th>
                <td>{{ audio.duracion }}</td>
            </tr>
        </tbody>
    </table>

    <audio preload="auto" controls>
        <source src="{{ vich_uploader_asset(audio) }}">
    </audio>

    <a href="{{ path('app_audio_index') }}" class="text-blue-600 hover:underline mr-2"><span class="fa-solid fa-arrow-left"></span> Volver</a>
    <a href="{{ path('app_audio_edit', {'id': audio.id}) }}" class="text-blue-600 hover:underline mr-2"><span class="fa-solid fa-pen-to-square"></span> Editar</a>

    {{ include('audio/_delete_form.html.twig') }}
{% endblock %}

{% extends 'layout.html.twig' %}

{% block title %}Audio{% endblock %}

{% block contenido %}

    <audio controls class="mt-3 block rounded-xl">
        <source src="{{ vich_uploader_asset(audio) }}">
    </audio>

    <div class="flex items-baseline">
        <h1 class="text-xl my-4 font-bold mr-5">{{ audio.recurso }}</h1>
        <a class="text-blue-600 hover:underline" href="{{ vich_uploader_asset(audio) }}" download><span class="fa-solid fa-download"></span> Descargar</a>
    </div>

    <div class="table-wrapper mb-4">
        <table class="table">
            <thead>

{% extends 'layout.html.twig' %}

{% block title %}Recurso index{% endblock %}

{% block contenido %}
    <h1>Recurso index</h1>

    <table class="table">
        <thead>
            <tr>
                <th>Id</th>
                <th>Nombre</th>
                <th>Descripcion</th>
                <th>Extension</th>
                <th>Fichero</th>
                <th>actions</th>
            </tr>
        </thead>
        <tbody>
        {% for recurso in recursos %}
            <tr>
                <td>{{ recurso.id }}</td>
                <td>{{ recurso.nombre }}</td>
                <td>{{ recurso.descripcion }}</td>
                <td>{{ recurso.extension }}</td>
                <td>{{ recurso.fichero ? 'Yes' : 'No' }}</td>
                <td>
                    <a href="{{ path('app_recurso_show', {'id': recurso.id}) }}">show</a>
                    <a href="{{ path('app_recurso_edit', {'id': recurso.id}) }}">edit</a>
                </td>
            </tr>
        {% else %}
            <tr>
                <td colspan="6">no records found</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

    <a href="{{ path('app_recurso_new') }}">Create new</a>
{% endblock %}
